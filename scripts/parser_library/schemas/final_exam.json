{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Final Exam",
	"description": "Semesterly Final Exam JSON definition",
	"type": "object",
	"properties": {
		"meeting": {
			"allOf": [
				{
					"$ref": "meeting.json#/"
				}
			],
			"properties": {
				"school": {},
				"class": {},
				"course": {},
				"section": {},

			}
		},
		"time": {
			"type": "string",
			"pattern": "[0-9]{2}/[0-9]{2}/[0-9]{4}"
		},
		"campus": {
			"type": "string"
		},
		"location": {
			"type": "string"
		}
	},
	"anyOf": [
		{
			"required": [
				"date"
			]
		},
		{
			"required": [
				"date",
				"time_start",
				"time_end"
			]
		}
	]
}
