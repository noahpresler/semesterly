{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Section",
	"description": "Semesterly Section JSON definition",
	"type": "object",
	"properties": {
		"kind": {
			"enum": ["section"]
		},
		"course_code": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"term": {
			"type": "string"
		},
		"year": {
			"type": "integer",
			"pattern": "/(201[0-9])/"
		},
		"capacity": {
			"type": "integer"
		},
		"enrollment": {
			"type": "integer"
		},
		"waitlist": {
			"type": "integer"
		},
		"waitlist_size": {
			"type": "integer"
		},
		"remaining_seats": {
			"type": "integer"
		},
		"type": {
			"type": "string"
		},
		"fees": {
			"oneOf": [
				{
					"type": "string",
					"pattern": "\\d(.\\d{2})?"
				},
				{
					"type": "number",
					"minimum": 0
				}
			]
		},
		"instructors": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "string"
					},
					{
						"$ref": "schema_instructor.json#/"
					}
				]
			}
		},
		"final_exam": {
			"$ref": "schema_final_exam.json#/"
		}
	},
	"additionalProperties": false,
	"required": [
		"section",
		"term",
		"year",
		"instructors"
	]
}
