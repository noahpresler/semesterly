{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Offering",
	"description": "Semesterly Offering JSON definition",
	"type": "object",
	"properties": {
		"kind": {
			"enum": ["offering"]
		},
		"course_code": {
			"type": "string"
		},
		"section_name": {
			"type": "string"
		},
		"days": {
			"type": "array",
			"items": {
				"type": "string",
				"oneOf": [
					{
						"pattern": "[M|T|W|R|F|S|U]"
					},
					{
						"pattern": "[0-9]{2}/[0-9]{2}/[0-9]{4}"
					}
				]
			}
		},
		"time_start": {
			"type": "string",
			"pattern": "^([01]\\d|2[0-3]):?([0-5]\\d)$"
		},
		"time_end": {
			"type": "string",
			"pattern": "^([01]\\d|2[0-3]):?([0-5]\\d)$"
		},
		"campus": {
			"type": "string"
		},
		"location": {
			"type": "string"
		}
	},
	"additionalProperties": false,
	"required": [
		"days",
		"time_start",
		"time_end"
	]
}