{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Meeting",
	"description": "Semesterly Meeting JSON schema",
	"type": "object",
	"properties": {
		"kind": {
			"enum": [ "eval", "eval_course", "eval_instr" ]
		},
		"course": {
			"allOf": [
				{
					"$ref": "course.json#/"
				}
			],
			"properties": {
				"code": {}
			},
			"additionalProperties": false
		},
		"score": {
			"type": "number",
			"minimum": 0,
			"maximum": 5
		},
		"summary": {
			"type": "string"
		},
		"instructors": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "string"
					},
					{
						"allOf": [
							{
								"$ref": "instructor.json#/"
							}
						],
						"properties": {
							"name": {}
						},
						"additionalProperties": false
					}
				]
			}
		},
		"term": {
			"type": "string"
		},
		"year": {
			"allOf": [
				{
					"$ref": "definitions.json#/year"
				}
			]
		}
	},
	"_comment": "TODO (singular) instructor is to allow instr specific evals"
}