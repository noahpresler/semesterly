{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Course",
	"description": "Semesterly Course JSON schema",
	"type": "object",
	"properties": {
		"kind": {
			"enum": ["course"]
		},
		"school": {
			"allOf": [
				{
					"$ref": "definitions.json#/school"
				}
			],
			"properties": {
				"code": {},
				"name": {}
			},
			"additionalProperties": false
		},
		"code": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"credits": {
			"type": "number"
		},
		"department": {
			"allOf": [
				{
					"$ref": "definitions.json#/department"
				}
			],
			"properties": {
				"code": {},
				"name": {}
			},
			"additionalProperties": false
		},
		"description": {
			"type": "array",
			"items": {
				"type": "string"
				}
		},
		"prerequisites": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"corequisites": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"exclusions": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"areas": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"level": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"cores": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"geneds": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"homepage": {
			"allOf": [
				{
					"$ref": "definitions.json#/url"
				}
			]
		},
		"related": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	},
	"required": [ "code" ]
}
