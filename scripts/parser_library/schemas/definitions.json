{
	"day": {
		"type": "string",
		"pattern": "[U|M|T|W|R|F|S]"
	},
	"date": {
		"type": "string",
		"pattern": "\\d{1,2}\/\\d{1,2}\/\\d{4}"
	},
	"time": {
		"type": "object",
		"properties": {
			"days": {
				"type": "array",
				"items": {
					"oneOf": [
						{
							"$ref": "#/day"
						},
						{
							"$ref": "#/date"
						}
					]
				},
				"minItems": 1,
				"uniqueItems": true
			},
			"start": {
				"type": "string"
			},
			"end": {
				"type": "string"
			}
		},
		"required": [
			"days",
			"start",
			"end"
		]
	},
	"location": {
		"type": "object",
		"properties": {
			"school": {
				"allOf": [
					{
						"$ref": "#/school"
					}
				],
				"properties": {
					"code": {}
				},
				"additionalProperties": false
			},
			"campus": {
				"type": "string"
			},
			"building": {
				"type": "string"
			},
			"room": {
				"type": "string"
			},
			"building_room": {
				"type": "string"
			}
		},
		"_comment": "(building or (building and room)) xor building_room",
		"oneOf": [
			{
				"anyOf": [
					{
						"required": ["building"]
					}
				]
			},
			{
				"required": ["building_room"],
				"not": {
					"oneOf": [
						{
							"required": ["room"]
						},
						{
							"required": ["building", "room"]
						}
					]
				}
			}
		]
	},
	"department": {
		"type": "object",
		"properties": {
			"code": {
				"type": "string"
			},
			"name": {
				"type": "string"
			}
		},
		"anyOf": [
			{
				"required": ["code"]
			},
			{
				"required": ["name"]
			}
		]
	},
	"school": {
		"type": "object",
		"properties": {
			"code": {
				"type": "string"
			},
			"name": {
				"type": "string"
			},
			"enrollment": {
				"type": "object",
				"properties": {
					"undergraduate": {
						"type": "integer"
					},
					"graduate": {
						"type": "integer"
					},
					"professional": {
						"type": "integer"
					},
					"faculty": {
						"type": "integer"
					}
				}
			}
		},
		"anyOf": [
			{
				"required": ["code"]
			},
			{
				"required": ["name"]
			}
		]
	},
	"url": {
		"type": "string"
	},
	"email": {
		"type": "string",
		"pattern": "[^@]+@[^@]+\\.[^@]+"
	}
}