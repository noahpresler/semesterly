{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "config.json",
  "description": "Semesterly school config.json definition",
  "type": "object",
  "properties": {
    "kind": {
      "enum": ["config"]
    },
    "school": {
      "allOf": [
        {
          "$ref": "definitions.json#/school"
        }
      ],
      "properties": {
        "code": {},
        "name": {}
      },
      "additionalProperties": false,
      "required": [ "code", "name" ]
    },
    "course_code_regex": {
      "type": "string"
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "time_granularity": {
      "type": "integer",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "registration_groupings": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "campuses": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "buildings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "time_zone": {
      "enum": [ "EST", "PST", "MST", "CST" ]
    },
    "departments": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "definitions.json#/department"
          }
        ],
        "properties": {
          "code": {},
          "name": {}
        },
        "additionalProperties": false,
        "required": [ "code" ]
      }
    },
    "single_access": {
      "type": "boolean"
    },
    "granularity": {
      "type": "integer",
      "minimum": 0,
      "maximum": 60
    },
    "full_academic_year_registration": {
      "type": "boolean"
    },
    "active_semesters": {
      "type": "object",
      "patterProperties": {
        "20[012]\\d": {
          "type": "string"
        }
      }
    },
    "ampm": {
      "type": "boolean"
    },
    "final_exams": {
      "type": "object"
    },
    "registrar": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": [
    "kind",
    "school",
    "course_code_regex",
    "terms",
    "single_access",
    "granularity",
    "full_academic_year_registration",
    "active_semesters",
    "ampm"
  ]
}
